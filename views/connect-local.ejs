<!doctype html>
<html>
<head>
    <title>The Poet's Corner</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body class="connect-body">
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <!-- <h1 class="connect-title">Add Local Account</h1> -->

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <div class="connect-container">

    <form action="/connect/local" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Add Local</button>
    </form>

    </div>

    <hr>

    <p><a href="/profile">Go back to profile</a></p>


</div>
</div>
</body>
</html>
